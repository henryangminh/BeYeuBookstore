
@{
    ViewData["Title"] = "Index";
}
@section Styles{
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css" rel="stylesheet" />
}
@section Scripts{


    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-datepicker/dist/locales/bootstrap-datepicker.vi.min.js" asp-append-version="true"></script>
    <script src="~/app/controllers/advertisementcontent/index.js" asp-append-version="true"></script>

    <script>
        var advertisementContent = new advertisementContentController();
        advertisementContent.initialize();</script>
}
<div class="title_left">
    <h3>Nội dung quảng cáo</h3>
</div>
<div class="form-group row">
    <div class="col-sm-4 form-group">
        <input type="text" id="txtKeyword" class="form-control" placeholder="Gõ từ khóa...">
    </div>
    <div class="col-lg-2">
        <select class="form-control" id="selStatus">
            <option value="">Chọn trạng thái</option>
            <option value="0">Chưa kiểm duyệt</option>
            <option value="1">Đã kiểm duyệt</option>
            <option value="2">Không đủ tiêu chuẩn</option>
        </select>
    </div>
    <div class="col-sm-4 form-group">

    </div>
    <div class="col-sm-1 form-group">
        <button id="btnCreate" class="btn btn-success"><i class="fa fa-plus"></i> Thêm mới</button>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table class="table table-striped table-bordered table-fix-header">
                    <thead>
                        <tr>
                            <th width="3%">Mã </th>
                            <th>Vị trí</th>
                            <th width="10%">Người quảng cáo</th>
                            <th>Hình ảnh</th>
                            <th>Đường dẫn</th>
                            <th>Trạng thái</th>
                            <th>Người kiểm duyệt</th>
                            <th width="8%">#</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
                <!--Pagination-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                            Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                        </div>
                    </div><div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{KeyId}}</td>
        <td>{{Id}}</td>
        <td>{{Advertiser}}</td>
        <td>{{{Img}}}</td>
        <td>{{PageUrl}}</td>
        <td>{{{Status}}}</td>
        <td>{{Censor}}</td>
        <td scope="row">
            <a class="btn btn-xs btn-default btn-edit {{{Prop}}}" {{{Prop}}} data-id="{{KeyId}}"><i class="fa fa-pencil"></i></a>
        </td>
    </tr>
</script>
@await Html.PartialAsync("_AddEditAdContent.cshtml")
