@{
    ViewData["Title"] = "Nhập thông tin nhân viên";
}
@section Styles{
<link href="~/css/autocomplete.css" rel="stylesheet" />
}
@section Scripts{

    <script src="~/app/controllers/employee/index.js" asp-append-version="true"></script>
    <script src="~/app/shared/auto/autoAddressbook.js"></script>
    <script>
        var employee = new employeeController();
        employee.initialize();</script>
}
<div class="page-title">
    <div class="title_left">
        <h3>Danh sách nhân viên</h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right">
            <div class="input-group">
                <input type="text" id="txtKeyword" class="form-control" placeholder="Gõ từ khóa...">
                <span class="input-group-btn">
                    <button class="btn btn-primary" id="btnSearch" type="button">Tìm!</button>
                </span>
            </div>
        </div>
        @*<div class="col-md-4 col-sm-12  form-group pull-right">
                <select class="form-control" id="ddlCategorySearch">
                    <option>--Select category--</option>
                </select>
            </div>*@
        <div class="col-md-2 col-sm-12  form-group pull-right">
            <button id="btnCreate" class="btn btn-success">Thêm mới</button>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th width="5%">STT</th>
                            <th>Mã</th>
                            <th>Tên</th>
                            <th>SĐT</th>
                            <th>Mã số thuế</th>
                            <th>Email</th>
                            <th>Phòng ban</th>
                            <th>Chức vụ</th>
                            <th width="5%">#</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
                <!--Pagination-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                            Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                        </div>
                    </div><div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{KeyId}}</td>
        <td>{{Id}}</td>
        <td>{{FullName}}</td>
        <td>{{MobilePhone}}</td>
        <td>{{TaxIDNumber}}</td>
        <td>{{Email}}</td>
        <td>{{DepartmentName}}</td>
        <td>{{PositionName}}</td>
        <th scope="row">
            <button class="btn btn-xs btn-default btn-edit" data-id="{{KeyId}}" type="button" data-toggle="tooltip" data-placement="top" title="Sửa"><i class="fa fa-pencil"></i></button>
        </th>
    </tr>
</script>
@await Html.PartialAsync("_AddEditEmployee.cshtml")