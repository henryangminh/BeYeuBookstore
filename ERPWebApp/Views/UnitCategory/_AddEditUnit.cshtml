<div id="modal-add-edit-unit" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Đơn vị tính</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmUnit">
                        <div class="form-group row">
                            <label for="txtUnitKeyid" class="col-xs-2 col-form-label">Mã </label>
                            <div class="col-xs-2">
                                <input type="text" class="form-control" id="txtUnitKeyid" name="txtUnitKeyid">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txtUnitName" class="col-xs-2 col-form-label">Tên đơn vị tính<span class="star"> *</span></label>
                            <div class="col-xs-6">
                                <input type="text" class="form-control" id="txtUnitName" name="txtUnitName" maxlength="20">
                            </div>

                        </div>

                        <div class="form-group row">

                            <label for="cbbUnitCategory" class="col-sm-2 col-form-label">Loại đơn vị tính<span class="star"> *</span></label>
                            <div class="col-sm-4">
                                <select id="cbbUnitCategory" class="form-control" name="cbbUnitCategory"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtFactor" class="col-sm-2 col-form-label">Hệ số<span class="star"> *</span></label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="txtFactor" name="txtFactor" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtRounding" class="col-sm-2 col-form-label">Làm tròn<span class="star"> *</span></label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="txtRounding" name="txtRounding" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txtUnitLastUpdatedByFK" class="col-sm-2 col-form-label">Người cập nhật gần nhất</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="txtUnitLastUpdatedByFK">
                            </div>
                            <label for="dtUnitDateModified" class="col-sm-2 col-form-label">Ngày cập nhật gần nhất</label>
                            <div class="col-sm-3">
                                <input type="text" class="form-control" id="dtUnitDateModified" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="checkbox col-xs-offset-9">
                                <label><input type="checkbox" value="" id="chkUnitStatus">Còn dùng?</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btnUnitSave" class="btn btn-success">Ghi</button>
                                <button type="button" id="btnUnitCancel" data-dismiss="modal" class="btn btn-danger">Hủy</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>