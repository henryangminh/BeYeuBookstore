@{
    ViewData["Title"] = "Nhập loại Unit";
}
@section Styles{
    
}
@section Scripts{
    
    <script src="~/app/controllers/unit/Unit.js"></script>
    <script src="~/app/controllers/unitcategory/unitCategory.js"></script>
    <script>
        var unit = new unitController();
        unit.initialize();
        var UnitCategory = new UnitCategoryController();
        UnitCategory.initialize();       
    </script>
}


<div class="container">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#Unit">Nhập đơn vị tính</a></li>
        <li><a data-toggle="tab" href="#UnitCategory">Nhập loại đơn vị tính</a></li>
    </ul>

    <div class="tab-content">
        <div id="Unit" class="tab-pane fade in active">
            <div class="page-title">
                <div class="title_left">
                    <h3>Các đơn vị tính</h3>
                </div>
                <div class="title_right">
                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right">
                        <div class="input-group">
                            <input type="text" id="txtUnitKeyword" class="form-control" placeholder="">
                            <span class="input-group-btn">
                                <button class="btn btn-primary" id="btnUnitSearch" type="button">Tìm</button>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-12  form-group pull-right">
                        <button id="btnUnitCreate" class="btn btn-success">Thêm mới</button>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th width="5%">STT</th>
                                        <th width="35%">Tên đơn vị tính</th>
                                        <th width="20%">Loại đơn vị tính</th>
                                        <th width="15%">Hệ số quy đổi theo đơn vị gốc</th>
                                        <th width="10%">Hệ số làm tròn</th>
                                        <th width="10%">Trạng thái</th>
                                        <th width="5%">#</th>
                                    </tr>
                                </thead>
                                <tbody id="tbl-Unitcontent"></tbody>
                            </table>
                            <!--Pagination-->
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                        <select id="ddlUnitShowPage">
                                            <option value="10" selected="selected">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                            <option value="50">50</option>
                                        </select>
                                        <span class="item-per-page">
                                            bản ghi/trang.
                                        </span>
                                        Tổng số bản ghi: <strong id="lblTotalUnitRecords"></strong>
                                    </div>
                                </div><div class="col-sm-7">
                                    <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                                        <ul id="paginationUnitUL"></ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="UnitCategory" class="tab-pane fade">
            <div class="page-title">
                <div class="title_left">
                    <h3>Các loại đơn vị tính</h3>
                </div>
                <div class="title_right">
                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right">
                        <div class="input-group">
                            <input type="text" id="txtUnitCategoryKeyword" class="form-control" placeholder="">
                            <span class="input-group-btn">
                                <button class="btn btn-primary" id="btnUnitCategorySearch" type="button">Tìm</button>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-12  form-group pull-right">
                        <button id="btnUnitCategoryCreate" class="btn btn-success">Thêm mới</button>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th width="5%">STT</th>
                                        <th width="30%">Tên loại đơn vị tính</th>
                                        <th width="50%">Mô tả</th>
                                        <th width="10%">Trạng thái</th>
                                        <th width="5%">#</th>
                                    </tr>
                                </thead>
                                <tbody id="tbl-UnitCategorycontent"></tbody>
                            </table>
                            <!--Pagination-->
                            <div class="row">
                                <div class="col-sm-5">
                                    <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                        <select id="ddlShowPage">
                                            <option value="10" selected="selected">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                            <option value="50">50</option>
                                        </select>
                                        <span class="item-per-page">
                                            bản ghi/trang.
                                        </span>
                                        Tổng số bản ghi: <strong id="lblTotalUnitCategoryRecords"></strong>
                                    </div>
                                </div><div class="col-sm-7">
                                    <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                                        <ul id="paginationUnitCategoryUL"></ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script id="table-unit" type="x-tmpl-mustache">
    <tr>
        <td>{{stt}}</td>
        <td>{{UnitName}}</td>
        <td>{{UnitCategory_FK}}</td>
        <td>{{Factor}}</td>
        <td>{{Rounding}}</td>
        <td>{{{Status}}}</td>
        <th scope="row">
            <button class="btn btn-xs btn-default btn-edit btn-editunit" data-id="{{KeyId}}" type="button" data-toggle="tooltip" data-placement="top" title="Sửa"><i class="fa fa-pencil"></i></button>
        </th>
    </tr>
</script>

<script id="table-unitCategory" type="x-tmpl-mustache">
    <tr>
        <td>{{stt}}</td>
        <td>{{UnitCategoryName}}</td>
        <td>{{UnitCategoryDescription}}</td>
        <td>{{{Status}}}</td>
        <th scope="row">
            <button class="btn btn-default btn-sm btn-edit btn-editunitcategory" data-id="{{KeyId}}"><i class="fa fa-pencil"></i></button>
        </th>
    </tr>
</script>
@await Html.PartialAsync("_AddEditUnit.cshtml")

@await Html.PartialAsync("_AddEditUnitCategory.cshtml")
