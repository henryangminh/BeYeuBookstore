
@{
    ViewData["Title"] = "Thông số hệ thống";
}
@section Styles{
    <link href="~/css/systemparameter/SysParamStyleSheet.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/app/controllers/systemparameter/SysParamTheme.js"></script>
}
<div class="pg-title row">
    <div class="pg-title-left col-xs-12 col-sm-6">
        <h3>Thông số hệ thống</h3>
    </div>
    <div class="pg-title-right col-xs-12 col-sm-6">
        <label for="txtCompName" class="control-label">Ngày cập nhật gần nhất: </label>


        <input id="dtLastMod form-control" disabled type="date" />

    </div>
</div>
<div class="clearfix"></div>
<form class="sys-param" id="frmSysParam">
    <div class="panel panel-default tab-theme">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#tab1">Thông tin công ty</a></li>
            <li><a data-toggle="tab" href="#tab2">Lương, thu nhập</a></li>
            <li><a data-toggle="tab" href="#tab3">Thuế thu nhập cá nhân</a></li>
        </ul>
        <div class="tab-content panel-body">
            @**********************Tab1**********************@
            <div id="tab1" class="tab-pane fade in active">
                <div class="container">
                    <div class="form-group row">
                        <label for="txtCompName" class="control-label col-xs-3 col-sm-2">Tên công ty:</label>
                        <div class="col-xs-9 col-sm-10">
                            <input type="text" class="form-control" id="txtCompName" placeholder="ERP Solution" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtAddress" class="control-label col-xs-3 col-sm-2">Địa chỉ:</label>
                        <div class="col-xs-9 col-sm-10">
                            <input type="text" class="form-control" id="txtAddress" placeholder="123 đường A, quận B, HCM" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtTelNumber" class="control-label col-xs-3 col-sm-2">Điện thoại:</label>
                        <div class="col-xs-9 col-sm-10">
                            <input type="tel" class="form-control" id="txtTelNumber" placeholder="+8488 8 888 888" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtFaxNumber" class="control-label col-xs-3 col-sm-2">Fax:</label>
                        <div class="col-xs-9 col-sm-10">
                            <input type="tel" class="form-control" id="txtFaxNumber" placeholder="+8488 8 888 888" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtMail" class="control-label col-xs-3 col-sm-2">Email:</label>
                        <div class="col-xs-9 col-sm-10">
                            <input type="email" class="form-control" id="txtMail" placeholder="email@gmail.com" />
                        </div>
                    </div>
                </div>
            </div>
            @**********************Tab2**********************@
            <div id="tab2" class="tab-pane fade">
                <div class="container">
                    <div class="form-group row">
                        <label for="txtCompName" class="control-label col-xs-6 col-sm-6">Lương tối thiểu (quy định nhà nước):</label>
                        <div class="col-xs-6 col-sm-6">
                            <div class="input-group">
                                <input type="text" class="form-control" id="txtMinSal" placeholder="Số tiền"/>
                                <span class="input-group-addon">VND</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtAddress" class="control-label col-xs-6 col-sm-6">Các ngày lễ trong năm (liệt kê dạng dd/mm, ...):</label>
                        <div class="col-xs-6 col-sm-6">
                            <input type="text" class="form-control" id="txtHolidays" placeholder="1/1, 30/4" />
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Bảo hiểm</th>
                                    <th>Chủ doanh nghiệp đóng</th>
                                    <th>Người lao động đóng</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Xã hội</td>
                                    <td>
                                        <div>
                                            <input type="text" maxlength="5" size="5" /> % lương cơ bản
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <input type="text" maxlength="5" size="5" />% lương cơ bản
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Y tế</td>
                                    <td>
                                        <div>
                                            <input type="text" maxlength="5" size="5" /> % lương cơ bản
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <input type="text" maxlength="5" size="5" /> % lương cơ bản
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Thất nghiệp</td>
                                    <td>
                                        <div>
                                            <input type="text" maxlength="5" size="5" /> % lương cơ bản
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <input type="text" maxlength="5" size="5" /> % lương cơ bản
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Phí công đoàn</td>
                                    <td>
                                        <div>
                                            <input type="text" maxlength="5" size="5" /> % lương cơ bản
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <input type="text" maxlength="5" size="5" /> % lương cơ bản
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            @**********************Tab3**********************@
            <div id="tab3" class="tab-pane fade">
                <div class="container">
                    <div class="container">
                        <label>Mức giảm trừ gia cảnh</label>
                    </div>
                    <div class="panel panel-default">
                        <div class="form-group">
                            <label for="txtCompName" class="control-label col-xs-12 col-sm-3">Cho bản thân:</label>
                            <div class="col-xs-12 col-sm-9 input-group">
                                <input type="text" class="form-control" id="txtForSelf" placeholder="Số tiền" />
                                <span class="input-group-addon">VND</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtAddress" class="control-label col-xs-12 col-sm-3">Cho người khác:</label>
                            <div class="col-xs-12 col-sm-9 input-group">
                                <input type="text" class="form-control" id="txtForOthers" placeholder="Số tiền" />
                                <span class="input-group-addon">VND / 1 người</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @****Btn*****@
    <div class="btn-control panel-footer">
        <button type="button" class="btn btn-success">Ghi</button>
        <button type="button" class="btn btn-danger">Không ghi</button>
    </div>

</form>
