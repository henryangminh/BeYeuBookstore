@{
    Layout = "~/Views/Shared/Frontend/_Layout.cshtml";
}
@section Scripts{
    <script src="~/app/controllers/cart/index.js"></script>
    <script>
        var cartPageController = new cartPageController();
        cartPageController.initialize();
    </script>
}

<div class="entry-header-area" style="margin-top:15px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="entry-header-title">
                    <h2>Giỏ hàng</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- entry-header-area-end -->
<!-- cart-main-area-start -->
<div class="cart-main-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form action="#">
                    <div class="table-content table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th class="product-thumbnail">Hình</th>
                                    <th class="product-name">Tên sách</th>
                                    <th class="product-price">Giá</th>
                                    <th class="product-quantity">Số lượng</th>
                                    <th class="product-subtotal">Thành tiền</th>
                                    <th class="product-remove">Xóa</th>
                                </tr>
                            </thead>
                            <tbody id="CartPageDetail">
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
                <div class="buttons-cart mb-30">
                    <ul>
                        <li><a id="DeleteCart">Xóa giỏ hàng</a></li>
                        <li><a href="@Url.Action("Shopping","BeyeuBookstore")">Tiếp tục mua hàng</a></li>
                    </ul>
                </div>
                @*
                    <div class="coupon">
                        <h3>Coupon</h3>
                        <p>Enter your coupon code if you have one.</p>
                        <form action="#">
                            <input type="text" placeholder="Coupon code">
                            <a href="#">Apply Coupon</a>
                        </form>
                    </div>
                *@
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="cart_totals">
                    <table>
                        <tbody>
                            <tr class="cart-subtotal">
                                <th>Thành tiền</th>
                                <td>
                                    <span class="amount" id="txtCartAmount">0</span>
                                </td>
                            </tr>
                            <tr class="shipping">
                                <th>Phí giao hàng</th>
                                <td>
                                    <span class="amount" id="txtCartDelivery">0</span>
                                </td>
                            </tr>
                            <tr class="order-total">
                                <th>Tổng cộng</th>
                                <td>
                                    <strong>
                                        <span class="amount" id="txtCartTotal">0</span>
                                    </strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="wc-proceed-to-checkout" style="float:right">
                    <a href="@Url.Action("CheckOut","BeyeuBookstore")">Thanh toán</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- cart-main-area-end -->

@await Html.PartialAsync("_CartDetail.cshtml")
