<div id="modal-add-edit" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="formAdd">Thêm </h4>
                <h4 class="modal-title" id="formWacth">Xem </h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <div class="form-group row">
                            <label for="txtId" class="col-sm-2 col-form-label">Mã phiếu</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtId" readonly />
                            </div>
                            <label for="txtMerchant" class="col-sm-2 col-form-label">Nhà cung cấp</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtMerchant" readonly />
                            </div>
                            <div class="hidden">
                                <input type="text" class="form-control" id="txtMerchantStatus" readonly />
                            </div>
                            <div class="hidden">
                                <input type="text" class="form-control" id="txtMerchantKeyId" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="dtDateCreated" class="col-sm-2 col-form-label">Ngày tạo</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="dtDateCreated" readonly />
                            </div>
                            <label for="dtDateModified" class="col-sm-2 col-form-label">Ngày chỉnh sửa</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="dtDateModified" readonly />
                            </div>
                        </div>
                        <div class="form-group row" id="formEditBooksOut">
                            <label for="selBook" class="col-sm-2 col-form-label">Chọn sách</label>
                            <div class="col-sm-4">
                                <select id="selBook" class="form-control" name="selBook">
                                    <option value="">Chọn sách</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <button type="button" id="btnMore" class="btn btn-success">Thêm sách</button>
                            </div>
                        </div>

                        <div class="form-group row">
                            <table class="table table-striped table-bordered table-fix-header" id="tblBooksOut">
                                <thead>
                                    <tr>
                                        <th width="3%">Mã sách</th>
                                        <th width="30%">Tên sách</th>
                                        <th>Tác giả</th>
                                        <th width="5%">Hình ảnh</th>
                                        <th>Loại sách</th>

                                        <th>Số lượng hiện có</th>

                                        <th width="10%">Số lượng<br>xuất</th>

                                        <th width="8%">#</th>
                                    </tr>
                                </thead>
                                <tbody id="tbl-booksoutcontent"></tbody>

                            </table>
                        </div>

                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <div id="formSaveBooksOut">
                    <button type="button" id="btnSave" class="btn btn-success">Ghi</button>
                    <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger">Hủy</button>
                </div>
            </div>
        </div>

    </div>
</div>
<script id="tableBooksOut-template" type="x-tmpl-mustache">
    <tr>

        <td>{{BookId}}</td>
        <td>{{BookName}}</td>
        <td>{{Author}}</td>
        <td>{{{Img}}}</td>
        <td>{{Category}}</td>
        <td>{{Qty}}</td>

        <td>
            <input id="booksInQty{{BookId}}" class="form-control" type="number" min="0" max="{{Qty}}" name="booksoutQty" />
        </td>
        <td scope="row">
            <a class="btn btn-xs btn-danger btn-delete {{{Prop}}}" {{{Prop}}} id="BooksOutDetailDelete"><i class="fa fa-trash"></i></a>
        </td>
    </tr>
</script>
<script id="tableBooksOutDetail-template" type="x-tmpl-mustache">
    <tr>
        <td>{{BookId}}</td>
        <td>{{BookName}}</td>
        <td>{{Author}}</td>
        <td>{{{Img}}}</td>
        <td>{{Category}}</td>
        <td>{{Qty}}</td>
        <td>{{QtyOut}}</td>
        <td scope="row"></td>
    </tr>
</script>