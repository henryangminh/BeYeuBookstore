<div id="modal-select-bom-order" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Chọn mặt hàng</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <div class="form-group row">
                            <label for="txtSelectCode" class="col-sm-2 col-form-label" id="lbDOB">Mã mặt hàng <span class="star">*</span></label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="txtSelectCode" name="txtSelectCode" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txtSelectName" class="col-sm-2 col-form-label">Tên mặt hàng <span class="star">*</span></label>
                            <div class="col-sm-10 autocomplete">
                                <input id="txtSelectName" data-id type="text" name="txtSelectName" placeholder="Chọn mặt hàng" style="width:100%"/>
                            </div>                           
                        </div>
                        <div class="form-group row">
                            <label for="txtSelectDes" class="col-sm-2 col-form-label">Mô tả</label>
                            <div class="col-sm-10">
                                <textarea rows="3" class="form-control" placeholder="Mô tả ?" id="txtSelectDes" name="txtSelectDes"></textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtSelectPrice" class="col-sm-2 col-form-label">Đơn giá <span class="star">*</span></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtSelectPrice" name="txtSelectPrice">
                            </div>
                            <label for="txtSelectUnit" class="col-sm-2 col-form-label">Đơn vị tính</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtSelectUnit" name="txtSelectUnit">
                            </div>                            
                        </div>

                        <div class="form-group row">
                            <label for="txtSelectQty" class="col-sm-2 col-form-label">Khối lượng <span class="star">*</span></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtSelectQty" name="txtSelectQty">
                            </div>
                            <label for="txtSelectQtyB2" class="col-sm-2 col-form-label">Khối lượng còn theo BOQ2</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtSelectQtyB2" name="txtSelectQtyB2">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txtSelectSubTotal" class="col-sm-2 col-form-label">Thành tiền</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtSelectSubTotal" name="txtSelectSubTotal">
                            </div>
                        </div>                      
                        <table id="table-select-detail" class="table table-bordered" style="display:none">
                            <thead>
                                <tr>                                  
                                    <th>Mã vật tư</th>
                                    <th>Tên vật tư</th>
                                    <th>ĐVT</th>
                                    <th>Số lượng</th>
                                    <th>Đơn giá</th>
                                    <th>Thành tiền</th>
                                    <th>Chú thích</th>                                  
                                    <th>Chọn</th>
                                </tr>
                            </thead>
                            <tbody id="table-selectdetail-content" style="text-align:center"></tbody>
                           
                        </table>
                        <script type="x-tmpl-mustache" id="table-template-detail">
                            <tr>
                                <td id="detail-code">{{detailcode}}</td>
                                <td id="detail-name">{{detailname}}</td>                               
                                <td id="detail-select-unit" data-unitfk="{{UnitFk}}">{{UnitName}}</td>
                                <td id="detail-qty" class="col-sm-1 qty position-number" data-value={{qtyvalue}}>{{detailqty}}</td>
                                <td id="detail-unitprice" class="col-sm-2 position-number" data-value={{unitpricevalue}} >{{unitprice}}</td>
                                <td id="detail-subtotal" class="position-number" data-value={{SubTatalvalue}} >{{SubTotal}}</td>
                                <td id="detail-note">
                                    <input type="text" value="{{note}}" id="txtSelectNote" name="txtSelectNote"/>
                                </td>
                                <td id="IsSelect">
                                    <input type="checkbox" id="chkTax" checked />
                                </td>
                            </tr>
                        </script>
                        <div class="form-group">
                            <div class="col-sm-offset-8 col-sm-4">
                                <button type="button" id="btnSave" class="btn btn-success">Ghi</button>
                                <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger">Hủy</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

