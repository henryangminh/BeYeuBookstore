@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/Frontend/_Layout.cshtml";
}
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/2.3.0/mustache.min.js"></script>
}
<div class="user-login-area mb-70" style="margin-top:15px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="login-title text-center mb-30">
                    <h2>Đăng ký tài khoản</h2>
                </div>
            </div>
            <div class="col-lg-offset-2 col-lg-8 col-md-offset-2 col-md-8 col-sm-12 col-xs-12">
                <div class="billing-fields">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-register">
                                <form>
                                    <label>Người liên hệ trực tiếp<span style="color:red">*</span></label>
                                    <input type="text" class="form-control" id="txtNameSignUp" placeholder="Người liên hệ trực tiếp" />
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-register">
                                <form>
                                    <label>Số điện thoại liên hệ<span style="color:red">*</span></label>
                                    <input type="text" class="form-control" id="txtPhoneSignUp" placeholder="Số điện thoại liên hệ" />
                                </form>
                            </div>
                        </div>
                    </div>
                    
                        <div class="single-register">
                            <form>
                                <label>Tên công ty<span style="color:red">*</span></label>
                                <input type="text" class="form-control" id="txtMerchantCompanyNameSignUp" placeholder="Tên công ty" />
                            </form>
                        </div>
                   
                        <div class="single-register">
                            <form>
                                <label>Địa chỉ xuất hóa đơn<span style="color:red">*</span></label>
                                <input type="text" class="form-control" id="txtAddressSignUp" placeholder="Địa chỉ in trên hóa đơn" />
                            </form>
                        </div>
                    
                    
                        <div class="single-register">
                            <form>
                                <label>Địa chỉ liên hệ<span style="color:red">*</span></label>
                                <input type="text" class="form-control" id="txtContactAddressSignUp" placeholder="Địa chỉ liên hệ" />
                            </form>
                        </div>
                    
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-register">
                                <form>
                                    <label>Mã số kinh doanh<span style="color:red">*</span></label>
                                    <input type="text" id="txtBussinessRegisterIdSignUp" placeholder="Mã số doanh nghiệp" />
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-register">
                                <form>
                                    <label>Mã số thuế<span style="color:red">*</span></label>
                                    <input type="text" id="txtTaxIdSignUp" placeholder="Mã số thuế" />
                                </form>
                            </div>
                        </div>
                    </div>
                    
                        <div class="single-register">
                            <form>
                                <label>Website<span style="color:red">*</span></label>
                                <input type="text" id="txtWebSignUp" placeholder="Website công ty" />
                            </form>
                        </div>
                   
                        <div class="single-register">
                            <form>
                                <label>Người đại diện<span style="color:red">*</span></label>
                                <input type="text" id="txtLegalRepresentativeSignUp" placeholder="Họ tên người đại diện" />
                            </form>
                        </div>
                    
                        <div class="single-register">
                            <form>
                                <label>Tài khoản ngân hàng<span style="color:red">*</span></label>
                                <input type="text" id="txtMerchantBankingNameSignUp" placeholder="Tài khoản ngân hàng" />
                            </form>
                       
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-register">
                                <form>
                                    <label>Ngân hàng<span style="color:red">*</span></label>
                                    <input type="text" id="txtBankSignUp" placeholder="Tên ngân hàng" />
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-register">
                                <form>
                                    <label>Chi nhánh<span style="color:red">*</span></label>
                                    <input type="text" id="txtBankBranchSignUp" placeholder="Tên ngân hàng" />
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-register">
                                <form>
                                    <label>Ngày thành lập<span style="color:red">*</span></label>
                                    <input type="date" id="txtDateSignUp" placeholder="Tên ngân hàng" />
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-register">
                                <form>
                                    <label>Quy mô kinh doanh<span style="color:red">*</span></label>
                                    <input type="text" id="txtScaleSignUp" placeholder="Tên ngân hàng" />
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="single-register single-register-3">
                        <input id="rememberme" type="checkbox" name="rememberme" value="forever">
                        <label class="inline">Tôi đã đọc và đồng ý với <a href="#" style="color:#00ABDF">điều khoản sử dụng</a></label>
                    </div>
                    <div class="single-register">
                        <a href="#">Đăng ký</a>
                    </div>
                    <div class="single-register">
                        <form>
                            <span>Đã có tài khoản. Hãy <a href="@Url.Action("SignIn","BeyeuBookstore")">đăng nhập</a></span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- user-login-area-end -->
