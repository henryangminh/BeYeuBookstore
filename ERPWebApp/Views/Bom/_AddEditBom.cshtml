<div id="modal-add-edit" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Định mức</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <div class="form-group row">

                            <label for="txtProductCode" class="col-sm-2 col-form-label">Mã định mức<span class="star">*</span></label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="txtProductBOMCode" name="txtProductBOMCode">
                            </div>

                            <label for="selUnit" class="col-sm-2 col-form-label" id="lbIDNumber">Đơn vị tính<span class="star">*</span></label>
                            <div class="col-sm-4">
                                <select id="selUnit" class="form-control" name="selUnit"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtProductName" class="col-sm-2 col-form-label">Tên định mức <span class="star">*</span></label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="txtProductName" name="txtProductName">
                            </div>

                        </div>
                        
                        <div class="form-group row">
                            <label for="txtDiscription" class="col-sm-2 col-form-label">Mô tả</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="txtDiscription" name="txtDiscription">
                            </div>

                        </div>

                        <div class="form-group row">
                            <label for="txtLastUpdatedByFK" class="col-sm-2 col-form-label">Người cập nhật gần nhất</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtLastUpdatedByFK">
                            </div>
                            <label for="dtDateModified" class="col-sm-2 col-form-label">Ngày cập nhật gần nhất</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="dtDateMotified" />
                            </div>
                        </div>
                        <div class="form-group row ">
                            <div class="checkbox col-sm-4">
                                <label><input type="checkbox" value="" id="chkStatus">Còn dùng?</label>
                            </div>
                        </div>
                        <table class="table table-bordered bom">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Mã vật liệu</th>
                                    <th>Tên vật liệu</th>
                                    <th>ĐVT</th>
                                    <th>Định mức</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="table-quantity-content" style="text-align:center"></tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="6">
                                        <button class="btn btn-xs btn-success" type="button" id="btn-add-product">Thêm</button>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                        <script type="x-tmpl-mustache" id="template-table-detail">
                            <tr>
                                <td class="col-sm-1">{{stt}}</td>
                                <td class="col-sm-4 col-productCode">
                                    <div class="col-sm-12 autocomplete">
                                        <input type="text" class="form-control code" value="{{ProductCode}}" id="txtProductCode" data-keyid="{{ProductFk}}"/>
                                        <div class="autocomplete-items contain-productCode">

                                        </div>
                                    </div>
                                    
                                </td>
                                <td style="text-align:left" class="col-sm-4 productName">{{ProductName}}</td>
                                <td id="productunit">{{ProductUnit}}</td>
                                <td id="productqty" class="col-sm-2">
                                    <input type="text" value="{{ProductQty}}" class="form-control qty" id="txtProductQty" name="txtProductQty"/>
                                </td>
                                <td id="btn"><button class="btn btn-xs btn-danger btn-delete-quantity" data-id="{{KeyId}}" type="button"><i class="fa fa-trash"></i></button></td>
                            </tr>
                        </script>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btnSave" class="btn btn-success">Ghi</button>
                                <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger">Hủy</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="productCode-template" type="x-tmpl-mustache">
    <div data-idproduct="{{KeyId}}" class="ddlproduct">
        <span id="productcode">{{ProductCode}}</span>
        <span id="productName">{{ProductName}}</span>
    </div>
</script>