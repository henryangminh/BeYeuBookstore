<div id="modal-grantpermission" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Chỉ định quyền</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12 col-md-12">
                        <table class="table table-hover tree " id="tblFunction">
                            <thead class="bordered-darkorange">
                                <tr style="color:blue">
                            <th>Chọn tất cả:</th>

                            <th>
                                <label>
                                    <input type="checkbox" id="ckCheckAllView" value="{{Id}}">
                                    <span class="text">Xem</span>
                                </label>
                            </th>
                            <th>
                                <label>
                                    <input type="checkbox" id="ckCheckAllCreate" value="{{Id}}">
                                    <span class="text Bold">Tạo</span>
                                </label>
                            </th>
                            <th>
                                <label>
                                    <input type="checkbox" id="ckCheckAllEdit" value="{{Id}}">
                                    <span class="text">Chỉnh sửa </span>
                                </label>
                            </th>
                            <th>
                                <label>
                                    <input type="checkbox" id="ckCheckAllDelete" value="{{Id}}">
                                    <span class="text">Xóa</span>
                                </label>
                            </th>
                            <th>
                                <label>
                                    <input type="checkbox" id="ckCheckAllConfirm" value="{{Id}}">
                                    <span class="text">Xác nhận</span>
                                </label>
                            </th>

                            </tr>
                            </thead>
                            <tbody id="lst-data-function" style="text-align:center"></tbody>
                        </table>
                        <script id="result-data-function" type="x-tmpl-mustache">
                            <tr class="treegrid-{{Id}} {{treegridparent}}" data-keyid="{{Id}}" >
                                <td style="text-align:left">{{Name}}</td>
                                <td>
                                    <label>
                                        <input type="checkbox" value="{{Id}}" class="ckView">
                                        <span class="text">Xem</span>
                                    </label>
                                </td>
                                <td>
                                    <label>
                                        <input type="checkbox" value="{{Id}}" class="ckAdd">
                                        <span class="text">Tạo</span>
                                    </label>
                                </td>
                                <td>
                                    <label>
                                        <input type="checkbox" value="{{Id}}" class="ckEdit">
                                        <span class="text">Chỉnh sửa</span>
                                    </label>
                                </td>
                                <td>
                                    <label>
                                        <input type="checkbox" value="{{Id}}" class="ckDelete">
                                        <span class="text">Xóa</span>
                                    </label>
                                </td>
                                <td>
                                    <label>
                                        <input type="checkbox" value="{{Id}}" class="ckConfirm">
                                        <span class="text">Xác nhận</span>
                                    </label>
                                </td>
                            </tr>
                        </script>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="button" id="btnSavePermission" class="btn btn-success">Lưu</button>
                        <button type="button" data-dismiss="modal" class="btn btn-default">Đóng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>