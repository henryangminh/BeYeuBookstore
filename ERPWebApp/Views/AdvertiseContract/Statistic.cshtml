
@{
    ViewData["Title"] = "Statistic";
}
@section Scripts{


    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-datepicker/dist/locales/bootstrap-datepicker.vi.min.js" asp-append-version="true"></script>
    <script src="~/app/controllers/advertisecontract/statistic.js" asp-append-version="true"></script>

    <script>
        var advertiseContractStatistic = new advertiseContractStatisticController();
        advertiseContractStatistic.initialize();</script>
}
<div class="title_left">
    <h3>Thống kê</h3>
</div>
<div class="form-group row">

    <div class="col-lg-4">
        <select class="form-control" id="selAdvertiser">
            <option value="">Chọn hãng quảng cáo</option>
        </select>
    </div>
    <div class="col-sm-2">
        <input type="text" id="mthFromMonth" autocomplete="off" class="form-control monthpicker" placeholder="Chọn tháng" />
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table class="table table-striped table-bordered table-fix-header">
                    <thead>
                        <tr>
                            <th>Người quảng cáo</th>     
                            <th>Tháng thống kê</th>     
                            <th>Số hợp đồng đăng ký</th>
                            <th>Số hợp đồng thành công</th>
                            <th>Tổng giá trị hợp đồng<br>đã thanh toán trong tháng</th>
                            <th>Tổng giá trị hợp đồng<br>đã thanh toán</th>
 
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
                <!--Pagination-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                            Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                        </div>
                    </div><div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Advertiser}}</td>
        <td>{{Month}}</td>
        <td>{{NoContract}}</td>
        <td>{{NoSuccessContract}}</td>
        <td>{{TotalContractValueInMonth}}</td>
        <td>{{TotalContractValue}}</td>
    </tr>
</script>