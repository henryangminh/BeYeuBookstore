
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/Frontend/_Layout.cshtml";
}
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/2.3.0/mustache.min.js"></script>
    <script src="~/app/controllers/advertiser/signup/index.js"></script>
    <script>
        var signUpController = new signUpController();
        signUpController.initialize();
    </script>
}
<div class="user-login-area mb-70" style="margin-top:15px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="login-title text-center mb-30">
                    <h2>Đăng ký tài khoản nhà quảng cáo</h2>
                </div>
            </div>
            <div class="col-lg-offset-2 col-lg-8 col-md-offset-2 col-md-8 col-sm-12 col-xs-12">
                <div class="billing-fields">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-register">
                                <form>
                                    <label>Họ tên<span style="color:red">*</span><span style="color:red" id="txtNameMessage"></span></label>
                                    <input class="form-control" type="text" id="txtNameSignUp" placeholder="Họ tên" />
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-register">
                                <form>
                                    <label>Email<span style="color:red">*</span><span style="color:red" id="txtEmailMessage"></span></label>
                                    <input class="form-control" type="email" id="txtEmailSignUp" placeholder="Email" />
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-register">
                                <form>
                                    <label>Mật khẩu<span style="color:red">*</span><span style="color:red" id="txtPasswordMessage"></span></label>
                                    <input type="password" class="form-control" id="txtPasswordSignUp" placeholder="Mật khẩu" />
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="single-register">
                                <form>
                                    <label>Nhập lại mật khẩu<span style="color:red">*</span><span style="color:red" id="txtRetypeMessage"></span></label>
                                    <input type="password" class="form-control" id="txtRetypePasswordSignUp" placeholder="Nhập lại mật khẩu" />
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="single-register">
                        <form>
                            <label>Địa chỉ<span style="color:red">*</span><span style="color:red" id="txtAddressMessage"></span></label>
                            <input type="text" class="form-control" id="txtAddressSignUp" placeholder="Địa chỉ" />
                        </form>
                    </div>
                    <div class="single-register">
                        <form>
                            <label>Điện thoại<span style="color:red">*</span><span style="color:red" id="txtPhoneNoMessage"></span></label>
                            <input type="text" class="form-control" id="txtPhoneNumberSignUp" placeholder="Số điện thoại" />
                        </form>
                    </div>
                    <div class="single-register">
                        <form>
                            <label>Tên thương hiệu<span style="color:red">*</span><span style="color:red" id="txtBrandNameMessage"></span></label>
                            <input class="form-control" type="text" id="txtBrandNameSignUp" placeholder="Tên thương hiệu" />
                        </form>
                    </div>
                    <div class="single-register">
                        <form>
                            <label>Trang web<span style="color:red">*</span><span style="color:red" id="txtUrlToBrandMessage"></span></label>
                            <input class="form-control" type="text" id="txtUrlToBrandSignUp" placeholder="Địa chỉ website" />
                        </form>
                    </div>
                </div>
                @*
                    <div class="single-register single-register-3">
                        <input id="rememberme" type="checkbox" name="rememberme" value="forever">
                        <label class="inline">Tôi đã đọc và đồng ý với <a href="#" style="color:#00ABDF">điều khoản sử dụng</a></label>
                    </div>
                *@
                <div class="single-register">
                    <a id="btnSignUp">Đăng ký</a>
                </div>
                <div class="single-register">
                    <form>
                        <span>Đã có tài khoản. Hãy <a href="@Url.Action("Index","Home")">đăng nhập</a></span>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- user-login-area-end -->