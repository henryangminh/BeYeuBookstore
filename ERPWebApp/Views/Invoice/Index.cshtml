@{
    ViewData["Title"] = "Hóa đơn";
}
@section Styles{
    <link href="~/lib/jQuery-EasyUI/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/lib/jQuery-EasyUI/themes/icon.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/lib/jQuery-EasyUI/jquery.easyui.min.js"></script>
    <script src="~/app/controllers/invoice/index.js"></script>
    <script>
        var invoice = new invoiceController();
        invoice.initialize();</script>
}
<div class="page-title">
    <div class="title_left">
        <h3>Danh sách hóa đơn</h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right">
            <div class="input-group">
                <input type="text" id="txtKeyword" class="form-control" placeholder="Gõ từ khóa...">
                <span class="input-group-btn">
                    <button class="btn btn-primary" id="btnSearch" type="button">Tìm!</button>
                </span>
            </div>
        </div>
        @*<div class="col-md-4 col-sm-12  form-group pull-right">
                <select class="form-control" id="ddlCategorySearch">
                    <option>--Select category--</option>
                </select>
            </div>*@
       
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table class="table table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Mã hóa đơn</th>
                            <th>Thời gian</th>
                            <th>Khách hàng</th>
                            <th>Tổng tiền hàng</th>
                            <th>Giảm giá</th>
                            <th>Khách đã trả</th>
                            <th width="5%">#</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
                <!--Pagination-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                            Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                        </div>
                    </div><div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{KeyId}}</td>
        <td>{{DateCreated}}</td>
        <td>{{FullName}}</td>
        <td style="text-align:right">{{TotalInvoice}}</td>
        <td style="text-align:right">{{Discount}}</td>
        <td style="text-align:right">{{PaidAmount}}</td>
        <th scope="row">
            <button class="btn btn-default btn-sm btn-view" data-id="{{KeyId}}"><i class="fa fa-eye-slash"></i></button>
        </th>
    </tr>
</script>
@await Html.PartialAsync("_ViewInvoice.cshtml")