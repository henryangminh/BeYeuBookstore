<div id="modal-add-edit-shipping" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Giao hàng</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <div class="form-group row">
                            <label for="txtReceiver" class="col-sm-2 col-form-label">Tên người nhận <span class="star">*</span></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtReceiver" name="txtReceiver">
                            </div>
                            <label for="txtPhoneNumber" class="col-sm-1 col-form-label">Số điện thoại</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="txtPhoneNumber" name="txtPhoneNumber">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtAddressNumber" class="col-sm-2 col-form-label" id="lbFullName">Số nhà</label>
                            <div class="col-sm-1">
                                <input type="text" class="form-control" id="txtAddressNumber" name="txtAddressNumber">
                            </div>
                            <label for="txtStreet" class="col-sm-1 col-form-label" id="lbFullName">Đường</label>
                            <div class="col-sm-3">
                                <input type="text" class="form-control" id="txtStreet" name="txtStreet">
                            </div>
                            <label for="txtWard" class="col-sm-2 col-form-label">Phường/Xã<span class="star">*</span></label>
                            <div class="col-sm-3">
                                <input type="text" class="form-control" id="txtWard" name="txtWard">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txtDistrict" class="col-sm-2 col-form-label">Quận/Huyện</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtDistrict" name="txtDistrict">
                            </div>
                            <label for="selCity" class="col-sm-2 col-form-label">Tỉnh/TP</label>
                            <div class="col-sm-4">
                                <select id="selCity" class="form-control" name="selCity"></select>
                            </div>
                        </div>
                        <div class="form-group row">
                                <label for="selShipper" class="col-sm-2 col-form-label">Đơn vị vận chuyển</label>
                                <div class="col-sm-4">
                                    <select id="selShipper" class="form-control" name="selShipper"></select>
                                </div>
                            </div>

                        <div class="form-group row">
                            <label for="txtFreight1" class="col-sm-2 col-form-label">Phí giao hàng</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtFreight1">
                            </div>
                            <label for="txtShipNo" class="col-sm-2 col-form-label">Mã vận đơn</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtShipNo" name="txtShipNo">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="dtShipDate" class="col-sm-2 col-form-label">Thời gian giao hàng</label>
                            <div class="col-sm-4">
                                <input type="date" class="form-control" id="dtShipDate" name="dtShipDate">
                            </div>
                            <label for="selStatusShip" class="col-sm-2 col-form-label">Trạng thái giao hàng<span class="star">*</span></label>
                            <div class="col-sm-4">
                                <select id="selStatusShip" class="form-control" name="selStatusShip">
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtNotes" class="col-sm-2 col-form-label">Ghi chú</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="txtNotes">
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btnSaveShip" class="btn btn-success">Xong</button>
                                <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger">Bỏ qua</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>