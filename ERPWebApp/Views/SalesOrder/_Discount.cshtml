<div class="modal fade" id="discount-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Giảm giá</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmDiscount">
                        
                        <div class="form-group row">
                            <label for="txtDiscount" class="col-sm-2 col-form-label">Giảm giá<span class="star">*</span></label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="txtDiscount" name="txtDiscount">
                            </div>
                            <label class="radio-inline"><input type="radio" name="optradio" checked id="rdoVND">VND</label>
                            <label class="radio-inline"><input type="radio" name="optradio" id="rdoPercent">%</label>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btnSaveDiscount" class="btn btn-success">Xong</button>
                                <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger">Bỏ qua</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>