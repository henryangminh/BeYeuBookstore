<!-- Modal -->
<div class="modal fade" id="productModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">x</span></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <div class="modal-tab">
                            <div class="product-details-large tab-content">
                                <div class="tab-pane active" id="image-1">
                                    <img id="imgDetail" alt="" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7 col-sm-7 col-xs-12">
                        <div class="modal-pro-content">
                            <input type="hidden" id="BookId" value="" />
                            <h3 id="txtBookNameModal"></h3>
                            <div class="price">
                                <span id="txtPriceModal"></span>
                            </div>
                            <div class="row">
                                <p id="txtAuthor"></p>
                            </div>
                            <div class="row">
                                <p id="txtDescriptionModal"></p>
                            </div>
                            <div class="row">
                                <p id="txtSize"></p>
                            </div>
                            <div class="row">
                                <p id="txtPaperback"></p>
                            </div>
                            <div class="row">
                                <p id="txtMerchant"></p>
                            </div>
                            <div id="divAddToCart" class="row">
                                <form onsubmit="return false">
                                    <button id="AddToCart">Thêm vào giỏ hàng</button>
                                </form>
                            </div>
                            <span id="quantityStatus"></span>
                            <span>-</span>
                            <span><a id="txtLinkToProduct" target="_blank" href="">Xem chi tiết</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal end -->