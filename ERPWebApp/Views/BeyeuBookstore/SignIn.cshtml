@using BeYeuBookstore.Extensions;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/Frontend/_Layout.cshtml";
}

@section Scripts{
    <script src="~/app/controllers/beyeubookstore/signin/index.js"></script>
    <script>
        var signInController = new signInController();
        signInController.initialize();
    </script>
}

@if (!HttpContextAccessor.HttpContext.Session.Get<Boolean>("IsLogin"))
{
    <div class="user-login-area mb-70" style="margin-top:15px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="login-title text-center mb-30">
                        <h2>Đăng nhập</h2>
                        <p style="color:red" id="rsSignIn"></p>
                    </div>
                </div>
                <div class="col-lg-offset-2 col-lg-8 col-md-offset-2 col-md-8 col-sm-12 col-xs-12">
                    <div class="billing-fields">
                        <div class="single-register">
                            <form>
                                <label>Email<span style="color:red">*</span></label>
                                <input class="form-control" type="email" id="txtEmailSignUp" placeholder="Email" />
                            </form>
                        </div>
                        <div class="single-register">
                            <form>
                                <label>Mật khẩu<span style="color:red">*</span></label>
                                <input class="form-control" type="password" id="txtPasswordSignUp" placeholder="Mật khẩu" />
                            </form>
                        </div>
                        <div class="single-register single-register-3">
                            <input id="rememberme" type="checkbox" name="rememberme" value="forever">
                            <label class="inline">Ghi nhớ đăng nhập của tôi</label>
                        </div>
                        <div class="single-register">
                            <a id="btnRegister">Đăng nhập</a>
                        </div>
                        <div class="single-register">
                            <form>
                                <span>Chưa có tài khoản. Hãy <a href="@Url.Action("SignUp", "BeyeuBookstore")">đăng ký</a></span>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else {
    <script>
            window.location.href = "/";
    </script>
}