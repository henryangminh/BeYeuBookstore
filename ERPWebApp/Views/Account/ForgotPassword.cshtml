
@model ForgotPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Bạn quên mật khẩu ?";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Đăng nhập hệ thống</title>

    <!-- Bootstrap -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!-- NProgress -->
    <link href="~/lib/nprogress/nprogress.css" rel="stylesheet" />

    <!-- Animate.css -->
    <link href="~/lib/animate.css/animate.css" rel="stylesheet" />
    <!--Notify-->
    <link href="~/lib/notifyjs/dist/styles/metro/notify-metro.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="~/admin-side/css/custom.css" rel="stylesheet" />
    <link href="~/admin-side/css/style.css" rel="stylesheet" />
</head>
<body class="ForgotPasswork">
    <div class="col-md-4 col-md-offset-3">
        <h2>@ViewData["Title"]</h2>
    </div>    
    <div class="row">
        <div class="col-md-4 col-md-offset-3">
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="button" class="btn btn-default" onclick="alert('Chức năng chưa có ! vui lòng liên hệ quản trị viên để thay đổi mật khẩu !')">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
