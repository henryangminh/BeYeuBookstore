<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Bé Yêu Bookstore</title>
    <!-- Bootstrap -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!-- Font Awesome -->

    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!-- jquery-ui and tag-it-->
    @*  <link rel="stylesheet" type="text/css" href="~/lib/jquery-ui/themes/flick/jquery-ui.css">*@
    @* <link href="~/lib/tag-it/css/jquery.tagit.css" rel="stylesheet" type="text/css">*@
    <link href="~/lib/jquery-ui/themes/flick/jquery-ui.css" rel="stylesheet" />

    <!-- NProgress -->

    <link href="~/lib/nprogress/nprogress.css" rel="stylesheet" />
    <!-- bootstrap-daterangepicker -->
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css" rel="stylesheet" />
    @*<link href="~/lib/bootstrap-datetimepicker-master/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />*@
    <link href="~/lib/notifyjs/dist/styles/metro/notify-metro.css" rel="stylesheet" />
    <link href="~/lib/ckeditor/skins/moono/editor.css" rel="stylesheet" />

    <!-- Custom Theme Style -->
    <link href="~/admin-side/css/custom.css" rel="stylesheet" />
    <link href="~/admin-side/css/style.css" rel="stylesheet" />

    <!--Add-->
    <!-- for-mobile-apps -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Classy Login form Responsive, Login form web template, Sign up Web Templates, Flat Web Templates, Login signup Responsive web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <!-- //for-mobile-apps -->
    <!--Google Fonts-->
    <link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,700' rel='stylesheet' type='text/css'>
    @RenderSection("Styles", required: false)
</head>

<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="/Home/index" class="site_title"><i class="fa fa-book"></i> <span>BY BookStore</span></a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            @if (@User.GetSpecificClaim("Avatar") != string.Empty)
                            {
                                <img src="@User.GetSpecificClaim("Avatar")" alt="..." class="img-circle profile_img">
                            }
                            else
                            {
                                <img src="~/admin-side/images/user.png" alt="..." class="img-circle profile_img">
                            }
                        </div>
                        <div class="profile_info">
                            <span>Xin chào,</span>
                            <h2 id="user">@User.GetSpecificClaim("FullName")</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->

                    <br />

                    <!-- sidebar menu -->
                    @await Component.InvokeAsync("SideBar")
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    @*<div class="sidebar-footer hidden-small">
                            <a data-toggle="tooltip" data-placement="top" title="Settings">
                                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                                <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" title="Lock">
                                <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                            </a>
                            <a data-toggle="tooltip" data-placement="top" onclick="document.getElementById('logoutForm').submit()" title="Đăng xuất" href="~/Areas/Admin/Views/Login/Index.cshtml">
                                <!-- <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right"></form> -->
                                <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                            </a>
                        </div>*@
                    <!-- /menu footer buttons -->
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                @await Html.PartialAsync("_LoginPartial")
                            </li>
                            <li role="presentation" class="dropdown" id="notification_content">
                                <a href="javascript:;" class="dropdown-toggle info-number" data-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-envelope-o"></i>
                                    <span class="badge bg-green" id="number_noti"></span>
                                </a>
                                <ul id="notification" class="dropdown-menu list-unstyled msg_list" role="menu"></ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <script id="notification-template" type="x-tmpl-mustache">
                <li>
                    <a>
                        <span class="image"><img src="/admin-side/images/img.jpg" alt="Profile Image" /></span>
                        <span>
                            <span>Thông báo</span>
                            <span class="time">{{NotificationTime}}</span>
                        </span>
                        <span class="message">{{NotificationContent}}</span>
                    </a>
                </li>
            </script>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    @RenderBody()
                </div>
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Phát triển bởi <a href="http://erpsolution.com.vn/">BeYeuBookstore.com.vn</a>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <div id="preloader" style="display:none">
        <div id="loader"></div>
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.js" charset="utf-8"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js" type="text/javascript" charset="utf-8"></script>

