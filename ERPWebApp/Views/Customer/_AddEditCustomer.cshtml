<div id="modal-add-edit" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Thêm khách hàng</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">
                        <div class="form-group row">
                            <label for="txtCustomer" class="col-sm-2 col-form-label">Tên khách hàng <span class="star">*</span></label>
                            <div class="col-sm-6 autocomplete">
                                <input id="txtCustomer" data-addressbookid type="text" name="txtCustomer" placeholder="Chọn khách hàng" style="width:100%" autocomplete="off"/>
                            </div>
                            <label for="txtId" class="col-sm-1 col-form-label">Mã</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="txtId" name="txtId">
                            </div>
                        </div>

                        <div class="form-group row">

                            <label for="selCustomerType" class="col-sm-2 col-form-label">Loại khách hàng</label>
                            <div class="col-sm-2">
                                <select id="selCustomerType" class="form-control" name="selCustomerType">
                                    <option value="0">Chiến lược</option>
                                    <option value="1">Thường</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="txtCreditLimit" class="col-sm-2 col-form-label" id="lbIDNumber">Mức tín dụng</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtCreditLimit" name="txtCreditLimit">
                            </div>
                            <label for="dpLastRevisedCreditLimitDate" class="col-sm-2 col-form-label" id="lbDOB">Ngày duyệt tín dụng gần nhất</label>
                            <div class="input-group date form_date col-md-3" id="dpLastRevisedCreditLimitDate" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                                <input class="form-control" size="16" type="text" value="" readonly >
                                <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                            <input type="hidden" id="dtp_input2" value="" /><br />

                        </div>
                        <div class="form-group row">
                            <label for="txtNumberOfConstruction" class="col-sm-2 col-form-label">Số lượng công trình</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtNumberOfConstruction">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtEvaluatedCustomer" class="col-sm-2 col-form-label">Thông tin đáng giá khách hàng</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="txtEvaluatedCustomer" name="txtEvaluatedCustomer">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtNotes" class="col-sm-2 col-form-label">Ghi chú</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="txtNotes">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtLastUpdatedByFK" class="col-sm-2 col-form-label">Người cập nhật gần nhất</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtLastUpdatedByFK">
                            </div>
                            <label for="dtDateModified" class="col-sm-2 col-form-label">Ngày cập nhật gần nhất</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="dtDateMotified" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-offset-8 checkbox">
                                <label><input type="checkbox" value="" id="chkStatus">Còn dùng?</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btnSave" class="btn btn-success">Ghi</button>
                                <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger">Hủy</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>